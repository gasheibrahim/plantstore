<body>
<nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="w3_agile_logo">
			<h1><a href="localhost:3000"><span>P</span> NM system<i>Plant Nursery Management System</i></a></h1>
		</div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="margin-left:20rem;">
        <li class="nav-item">
          <%= link_to "Home", root_url, class:"nav-link",style:"color:#fff;" %>
        </li>
        <li class="nav-item">
          <%= link_to "All product", products_path, class:"nav-link", style:"color:#fff;" %>
        </li>
        <li class="nav-item">
          <%= link_to "About Us", about_index_path, class:"nav-link", style:"color:#fff;" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact Us", contact_index_path, class:"nav-link", style:"color:#fff;" %>
        </li>
      </ul>
    </div>
</nav><br><br><br>
<div class="container">
    <div class="row">
        <div class="col-md-4 shadow p-3 mb-5 bg-white rounded productshow">
          <div class="image-gallery">
            <div id="big">
              <%= image_tag @product.product_image.url %>
            </div>  
          </div> 
        </div>
    <div class="col-md-6 shadow p-3 mb-5 bg-white rounded">
      <h1 style="color:#46a9fa;font-size: 30px;">
        <%= @product.product_name %>
      </h1>
      <h6 class="card-text" style="font-size: 15px;">
        <strong id="category">Product Description:</strong> <%= @product.product_details.truncate(50) %>
      </h6>
      <h5 class="card-text" style="font-size: 15px;">
        <strong id="category">Price:</strong><%= number_to_currency(@product.sales_price, :unit => "RWF") %>
      </h5>
      <h6 id="regular" style="font-size: 15px;">
        <% if @product.regular_price.present? %>
          <%= number_to_currency(@product.regular_price, :unit => "RWF") %>
        <% end %>
      </h6>
      <div class="col-md-12">
        <div class="col-md-4">
          <%= button_to 'Add to cart', line_items_path(product_id: @product), class:"w3ls_more", style:'padding:15px;font-size:15px;border-radius:10px;width:150px;' %>
        </div>
        <div class="col-md-4">
          <%= button_to 'Pay Now', line_items_path(product_id: @product), class:"w3l_contact", style:'padding:15px;font-size:15px;border-radius:10px;width:150px;' %>
      </div>
      </div>
    </div>
  </div>
  </div>
</body><br><br><br><br><br><br>
